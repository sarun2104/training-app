# Docker Environment Configuration
# Copy this file to .env and update values for your deployment

# ============================================
# Application Settings
# ============================================
APP_NAME=Learning Management System
APP_VERSION=1.0.0
DEBUG=False

# ============================================
# Security (CHANGE THESE IN PRODUCTION!)
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-production-secret-key-change-me-generate-random
JWT_SECRET_KEY=your-jwt-secret-key-change-me-generate-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Database - PostgreSQL
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
# CHANGE THIS PASSWORD IN PRODUCTION!
POSTGRES_PASSWORD=postgres
POSTGRES_DB=training_db

# ============================================
# Database - FalkorDB (Graph Database)
# ============================================
FALKORDB_HOST=falkordb
FALKORDB_PORT=6379
FALKORDB_DB=0
FALKORDB_PASSWORD=
FALKORDB_GRAPH_NAME=lms_graph

# ============================================
# CORS Settings
# ============================================
# Add your production domains here
ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000,https://yourdomain.com

# ============================================
# Quiz Configuration
# ============================================
QUIZ_PASSING_SCORE=70.0
REMINDER_DAYS_NOT_STARTED=3
REMINDER_DAYS_INCOMPLETE=7

# ============================================
# Notifications (Future Feature)
# ============================================
NOTIFICATION_ENABLED=False
FCM_SERVER_KEY=

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:8000
